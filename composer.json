{
    "name": "devpane/website",
    "description": "The Website for devpane.com.",
    "keywords": ["devpane", "fwartner", "laravel"],
    "license": "MIT",
    "type": "project",
    "authors": [
      {
        "name": "Florian Wartner",
        "email": "f.wartner@devpane.com"
      }
    ],

    "require": {
        "php": ">=5.5.9",
        "laravel/framework": "5.1.*",
        "vinkla/pusher": "^2.1",
        "laravel/socialite": "^2.0",
        "mpociot/teamwork": "^1.2",
        "predis/predis": "^1.0",
        "pusher/pusher-php-server": "^2.2",
        "pda/pheanstalk": "^3.1",
        "laravel/cashier": "^5.0",
        "guzzlehttp/guzzle": "~5.3|~6.0",
        "laravelcollective/html": "^5.1",
        "uxweb/sweet-alert": "^1.1",
        "cviebrock/eloquent-sluggable": "^3.1",
        "thujohn/twitter": "^2.0",
        "graham-campbell/markdown": "^5.1",
        "intervention/image": "^2.3",
        "genealabs/laravel-mixpanel": "~0.4.3"
    },

    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~4.0",
        "phpspec/phpspec": "~2.1"
    },

    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "pre-update-cmd": [
            "php artisan clear-compiled"
        ],
        "post-update-cmd": [
            "php artisan optimize"
        ],
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
